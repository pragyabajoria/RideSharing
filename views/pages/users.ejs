<!-- views/pages/profile.ejs -->
<!DOCTYPE html>
<html>
  <head>
    <% include ../partials/head %>
    <title><%= title %></title>
  </head>
  <body>
    <header>
      <% include ../partials/header %>
    </header>
    <br/><br/>
    <h1>Admin Dashboard</h1>

    <div>
        <table border="0" cellpadding="20" cellspacing="20">
            <tr>
                
                <th>First Name</th>
          <th>Last Name</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Status</th>
          <th>&nbsp;</th>
            </tr>
                           
            <% if(data.length){                         
          for(var i = 0;i < data.length;i++) { %>         
            <tr>
                         <td><%=data[i].firstname%></td>
          <td><%=data[i].lastname%></td>
                <td><%=data[i].email%></td>
                <td><%=data[i].phone%></td>
          <td><%=data[i].status%></td>
                <td>
                <% if (data[i].status == 'active') {%>
                    <a href="admin/users/deactivate/<%=data[i].id%>">Deactivate</a>  
                <%} else{ %>

                    <a href="admin/users/activate/<%=data[i].id%>">Activate</a>
               <% } %>             
                    <a href="javascript:void(0)" onClick="deleteUser(<%=data[i].id%>)">Delete</a>               
                </td>
            </tr>
        <% }
        
         }else{ %>
             <tr>
                <td colspan="5">No Data</td>
             </tr>
        <% } %>
                                          
        </table>
    </div>

    <script>

      function deleteUser(id){  

      var result = confirm("Do you want to delete this user?");
      if (result) {

        $.ajax({
            url:"/user/"+id,
            type: 'DELETE',
            success: function(res) {                
                window.location.reload();
                alert("This user was deleted.");
                return false;
            },
            error:function(xhr, status, error){            
                console.log(xhr.responseText);
                alert("delete error");
                return false;
            }
        });

        }
      }

    </script>
    <footer>
        <% include ../partials/footer %>
    </footer>
  </body>
</html>