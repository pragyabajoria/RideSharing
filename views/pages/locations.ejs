<!-- views/pages/profile.ejs -->
<!DOCTYPE html>
<html>
  <head>
    <% include ../partials/head %>
    <title><%= title %></title>
  </head>
  <body>
    <header>
      <% include ../partials/header %>
    </header>
    <br/><br/>
    <h1>Admin Dashboard</h1>

    <div>
    <table border="0" cellpadding="6" cellspacing="6">
        <tr>
          <th>Name</th>
      <th>City</th>
            <th>State</th>
            <th>zipcode</th>
      <th></th>
        </tr>
                       
        <% if(data.length){                         
         for(var i = 0;i < data.length;i++) { %>         
        <tr>
          <td><%=data[i].name%></td>
      <td><%=data[i].city%></td>
            <td><%=data[i].state%></td>
            <td><%=data[i].zipcode%></td>
            <td>
                <a href="/locations/<%=data[i].id%>">Edit Location</a>               
                <a href="javascript:void(0)" onClick="deleteLocation(<%=data[i].id%>)">Delete Location</a>               
            </td>
        </tr>
    <% }
    
     }else{ %>
         <tr>
            <td colspan="5">No Locations</td>
         </tr>
    <% } %>
                                      
    </table>
</div>
     <script>

      function deleteLocation(id){  

      var result = confirm("Do you want to delete this location?");
      if (result) {

        $.ajax({
            url:"/location/"+id,
            type: 'DELETE',
            success: function(res) {                
                window.location.reload();
                alert("This user was deleted.");
                return false;
            },
            error:function(xhr, status, error){            
                console.log(xhr.responseText);
                alert("delete error");
                return false;
            }
        });

        }
      }

    </script>
    <footer>
        <% include ../partials/footer %>
    </footer>
  </body>
</html>