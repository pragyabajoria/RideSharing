<!DOCTYPE html>
<html>
    <head>
        <title><%=title%></title>
        <script type="text/javascript" src="/../jquery-1.10.2.min.js"></script>
        <link rel="stylesheet" href="/../style.css">
    </head>
<body>
<div class="data-table">
    <table border="0" cellpadding="6" cellspacing="6">
        <tr>
            <th width="65px">ID</th>
            <th>First Name</th>
			<th>Last Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Status</th>
			<th>Operation</th>
        </tr>
                       
        <% if(data.length){                         
         for(var i = 0;i < data.length;i++) { %>         
        <tr>
			<td><%=data[i].id%></td>
            <td><%=data[i].firstname%></td>
			<td><%=data[i].lastname%></td>
            <td><%=data[i].email%></td>
            <td><%=data[i].phone%></td>
			<td><%=data[i].status%></td>
            <td>
                <a class="a-inside edit" href="/database/members/<%=data[i].id%>">Edit</a>               
                <a class="a-inside delete" href="javascript:void(0)" onClick="deleteMember(<%=data[i].id%>)">Delete</a>               
            </td>
        </tr>
    <% }
    
     }else{ %>
         <tr>
            <td colspan="5">No Data</td>
         </tr>
    <% } %>
                                      
    </table>
</div>
<div class="page-data">
    
    <form method="post" action="" id="membersform">
        <table cellpadding="12">
		<tr>
			<h3> Add a new member</h3>
		</tr>
		<!--<tr>			
            <td class="label">ID</td><td><input type="text" name="id"></td>
         </tr>-->
        <tr>
            <td class="label">First Name</td><td><input type="text" name="firstname"></td>
         </tr>
		 <tr>
            <td class="label">Last Name</td><td><input type="text" name="lastname"></td>
         </tr>
        <tr>
            <td class="label">Email</td><td><input type="text" name="email"></td>
         </tr>
          <tr>
            <td class="label">Phone</td><td><input type="text" name="phone"></td>
         </tr>
		   <tr>
            <td class="label">Status</td><td><input type="text" name="status"></td>
         </tr>
         <tr>
            <td class="label"></td>
            <td>
                <input type="button" value="Save" onClick="saveMember()">
            </td>
         </tr>
        </table>
    </form>
</div>
<div class="page-data">
     <ul class="err-area"></ul>
</div>

<script>
    function saveMember(){       
       $.ajax({        
        url:"/database/members/",
        type:"post",
        data:$("#membersform").serialize(),
        success:function(res){            
            window.location.reload();
            return false;
        },
        error:function(xhr, status, error){           
            console.log(xhr.responseText);
            var err = '';
            $.each(JSON.parse(xhr.responseText) , function(i, item) {               
                 err +='<li>'+item.msg+'</li>';
            });
            $(".err-area").html(err);    
            return false;
        }
        
       });
    }
    
    function deleteMember(id){    
        $.ajax({
            url:"/database/members/"+id,
            type: 'DELETE',
            success: function(res) {                
                window.location.reload();
                return false;
            },
            error:function(xhr, status, error){            
                console.log(xhr.responseText);
                alert("delete error");
                return false;
            }
        });
    }

</script>
</body>
</html>
