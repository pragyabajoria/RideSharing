<!DOCTYPE html>
<html>
    <head>
        <title><%=title%></title>
        <script type="text/javascript" src="/../jquery-1.10.2.min.js"></script>
		
    </head>
<body>
<form method="post" action="" id="ridesform">
    <table cellpadding="12">
    <tr>
        <td class="label">Driver</td><td><input type="text" name="driver" value="<%=data[0].driver%>"></td>
     </tr>

    <tr>
        <td class="label">Origin</td><td><input type="text" name="origin" value="<%=data[0].origin%>"></td>
     </tr>
	 	 <tr>
        <td class="label">Destination</td><td><input type="text" name="destination" value="<%=data[0].destination%>"></td>
     </tr>
      <tr>
        <td class="label">Seats</td><td><input type="text" name="seats" value="<%=data[0].seats%>"></td>
     </tr>
		<tr>
			<td>Date</td><td><input type="date" name="date" value="<%=data[0].datetime%>"></td>
		</tr>
     <tr>
        <td class="label"></td>
        <td>
            <input type="button" value="Save changes" onClick="saveRide()">
        </td>
     </tr>
    </table>
</form>
	<script>
    
        function saveRide(){           
           $.ajax({            
            url:"/rides/"+<%=data[0].id%>,
            type:"put",
            data:$("#ridesform").serialize(),
            success:function(res){                
                window.location.href = '/rides/';
                return false;
            },
            error:function(xhr, status, error){                
                console.log(xhr.responseText);
                var err = '';
                $.each(JSON.parse(xhr.responseText) , function(i, item) {                   
                     err +='<li>'+item.msg+'</li>';
                });
                $(".err-area").html(err);    
                return false;
            }            
           });
        }
    
    </script>
</body>
</html>
